<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/tasbeh"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <EditText
        android:id="@+id/edt_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="......."
        android:textSize="35sp"/>

    <TextView
        android:id="@+id/tv_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="al-Ḥamdu lillāh ٱلْحَمْدُ لِلَّهِ"
        android:textColor="#532F2F"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?actionBarItemBackground"
        />
    <TextView
        android:id="@+id/tv_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="АстагфируЛлах أستغفر الله"
        android:textColor="#532F2F"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?actionBarItemBackground"
        />
    <TextView
        android:id="@+id/tv_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="الله أكب  رАллах акбар"
        android:textColor="#532F2F"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?actionBarItemBackground"
        />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:backgroundTint="#532F2F"/>
    <Button
        android:id="@+id/btn_33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zikr 33"
        android:backgroundTint="#532F2F"

        />

</LinearLayout>